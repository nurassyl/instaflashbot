# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = false
indent_style = tab
tab_width = 4

[*.{sh,yml,json,md,java,kt}]
indent_style = space
indent_size = 2

[*.{xml,gradle}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
